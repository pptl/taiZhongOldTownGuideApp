<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_solid">

    <TextView
        android:id="@+id/check_in_background"
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rectangle_solid"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/check_in_oncompleted_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CheckHint"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/check_in_background"
        app:layout_constraintStart_toStartOf="@+id/check_in_background"
        app:layout_constraintTop_toTopOf="@+id/check_in_background" />

    <Button
        android:id="@+id/check_in_oncomplete_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Done"
        app:layout_constraintBottom_toBottomOf="@+id/check_in_background"
        app:layout_constraintEnd_toEndOf="@+id/check_in_background"
        app:layout_constraintStart_toStartOf="@+id/check_in_background" />

    <TextView
        android:id="@+id/check_in_oncomplete_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CheckDesc"
        app:layout_constraintBottom_toBottomOf="@+id/check_in_background"
        app:layout_constraintEnd_toEndOf="@+id/check_in_background"
        app:layout_constraintStart_toStartOf="@+id/check_in_background"
        app:layout_constraintTop_toTopOf="@+id/check_in_background" />
</androidx.constraintlayout.widget.ConstraintLayout>